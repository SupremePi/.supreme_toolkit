	sleep 1
else
    cd $HOME/code/
	git clone https://github.com/midwan/amiberry
	cd amiberry
	make clean
	git pull
	make -j2 PLATFORM=rpi4-sdl2
	#make -j2 PLATFORM=rpi3-sdl2
	#make PLATFORM=rpi1-sdl2
	clear
	sudo cp amiberry /opt/retropie/emulators/amiberry/amiberryrpi4SDL2
